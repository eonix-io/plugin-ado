{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true, //required for zen observables
        "declaration": true,
        "outDir": "./dist",
        "rootDirs": [
            "src",
            "../common"
        ],
        "noEmitOnError": true,
        "strict": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "importHelpers": true,
        "sourceMap": true
    }
}